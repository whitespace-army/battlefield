:host
  width 32%
  margin 0 1.3% 1.3% 0

.item
  overflow hidden
  border-radius 8px
  box-sizing border-box

.image
  height 180px
  object-fit cover

.actions
  display flex
  align-items center
  justify-content flex-end

.title
.subtitle
  text-align center

.link
  color black
  text-decoration none
  font-family 'Marck Script', cursive

  &:hover
    color $c-purple
