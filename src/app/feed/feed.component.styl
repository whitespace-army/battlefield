:host
  display block
  width 1000px
  margin 0 auto

.item
  display flex
  padding 20px
  border-radius 4px
  border 1px solid #7c8491
  background-color #d7e1e5

  &-image
    margin-right 40px
    width 128px
    height 128px
    flex-shrink 0

  &-info
    flex-grow 1
    display flex
    flex-direction column
