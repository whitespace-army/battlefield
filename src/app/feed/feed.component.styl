:host
  width 1000px
  margin 0 auto
  display flex
  justify-content flex-end

.feed
  display flex
  flex-grow 1
  flex-wrap wrap

.item
  width 32%
  margin 0 1.3% 1.3% 0
  box-sizing border-box

.image
  height 180px
  object-fit cover

.form
  width 180px
  display flex
  margin-left 10px
  flex-shrink 0
  flex-direction column

  & > *
    margin-bottom 20px

.actions
  display flex
  align-items center
  justify-content flex-end
