:host
  width 1000px
  margin 0 auto
  display flex
  justify-content flex-end

.feed
  display flex
  flex-grow 1
  flex-wrap wrap
  justify-content space-between

  &-item
    width 32%
    margin-bottom 20px
    box-sizing border-box

.form
  width 160px
  display flex
  margin 0 20px
  flex-shrink 0
  flex-direction column

  & > *
    margin-bottom 20px
