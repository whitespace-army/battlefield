:host
  width 1000px
  margin 0 auto
  display flex
  align-items center
  flex-direction column

.image
  max-width 600px
  border-radius 8px

.title
  font-size 50px
  margin 20px 0
  text-align center
  font-family 'Marck Script', cursive

.description
  padding 20px
  margin 30px 0 20px 0
  border-radius 8px
  box-sizing border-box

  &-title
    font-size 24px
    font-family 'Marck Script', cursive

.stats
  padding 20px
  border-radius 8px
  margin-bottom 20px
  box-sizing border-box

  &-item
    display flex
    justify-content space-between

  &-name
    font-size 20px
    margin-right 20px
    text-transform capitalize
    font-family 'Marck Script', cursive

  &-title
    font-size 24px
    font-family 'Marck Script', cursive

.ingredients
  flex-grow 1
  padding 20px
  border-radius 8px
  box-sizing border-box

  &-title
    font-size 24px
    font-family 'Marck Script', cursive

.calorie
  border-radius 8px
  font-family 'Marck Script', cursive

  &-description
    font-size 20px

  &-title
    font-size 24px

.row
  display flex
  margin-bottom 20px

.column
  display flex
  margin-right 20px
  flex-direction column
